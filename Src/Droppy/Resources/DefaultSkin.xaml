                                <GeometryDrawing Brush="#30FFFFFF" Geometry="F1 M 8,6.10352e-005C 12.4183,6.10352e-005 16,3.58173 16,8.00006C 16,12.4183 12.4183,16.0001 8,16.0001C 3.58179,16.0001 0,12.4183 0,8.00006C 0,3.58173 3.58173,6.10352e-005 8,6.10352e-005 Z "/>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>

                        <DrawingBrush x:Key="HoverHighlight" Stretch="Fill">
                            <DrawingBrush.Drawing>
                                <GeometryDrawing Geometry="F1 M 8,0C 12.4183,0 16,3.58173 16,8C 16,12.4183 12.4183,16 8,16C 3.58173,16 0,12.4183 0,8C 0,3.58173 3.58173,0 8,0 Z ">
                                    <GeometryDrawing.Brush>
                                        <RadialGradientBrush RadiusX="0.929688" RadiusY="0.929689" Center="0.515381,1.44603" GradientOrigin="0.515381,1.44603">
                                            <RadialGradientBrush.GradientStops>
                                                <GradientStop Color="#A2FFFFFF" Offset="0"/>
                                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                                            </RadialGradientBrush.GradientStops>
                                            <RadialGradientBrush.RelativeTransform>
                                                <TransformGroup>
                                                    <RotateTransform CenterX="0.515381" CenterY="1.44603" Angle="-90"/>
                                                </TransformGroup>
                                            </RadialGradientBrush.RelativeTransform>
                                        </RadialGradientBrush>
                                    </GeometryDrawing.Brush>
                                </GeometryDrawing>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </ControlTemplate.Resources>

                    <Grid Width="20" Height="20" Margin="1">
                        <Border Name="Bd" Background="{StaticResource BackgroundBrush}">
                            <ContentPresenter Name="Presenter" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <Border Name="Bd_HoverHighlight" Background="{StaticResource HoverHighlight}" Opacity="0" Margin="2"/>
                        <Border Name="Bd_PressHighlight" Background="{StaticResource PressHighlight}" Opacity="0" Margin="2"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd_HoverHighlight" Property="Opacity" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd_PressHighlight" Property="Opacity" Value="1"/>
                            <Setter TargetName="Presenter" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ContextMenuStyle" TargetType="{x:Type ContextMenu}">
        <Setter Property="Background" Value="#D01C4273"/>
        <Setter Property="Foreground" Value="white"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContextMenu}">
                    <Border Uid="Border_93">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Tag" Value="{DynamicResource {x:Static SystemParameters.DropShadowKey}}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Padding" Value="0,0,5,5"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="4" Opacity="0.8" ShadowDepth="1"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" 
			            		Background="{TemplateBinding Background}" Uid="Border_50">
                            <ScrollViewer CanContentScroll="True" Uid="ScrollViewer_9"
							  Style="{DynamicResource {ComponentResourceKey ResourceId=MenuScrollViewer, TypeInTargetAssembly={x:Type FrameworkElement}}}" >
                                <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Cycle"
								    Margin="{TemplateBinding Padding}"
									SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" Uid="ItemsPresenter_5"/>
                            </ScrollViewer>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- This style is here in case I change my mind and decide to roll my own menu item template.  For now, since I decided to add icons, this
         won't be necessary, so at the moment, this style is unused -->
    <Style x:Key="ContextMenuItemStyle" TargetType="{x:Type MenuItem}">
        <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
        <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template" Value="{DynamicResource {ComponentResourceKey ResourceId=SubmenuItemTemplateKey, TypeInTargetAssembly={x:Type MenuItem}}}"/>
        <Style.Triggers>
            <Trigger Property="Role" Value="TopLevelHeader">
                <Setter Property="Padding" Value="7,2,8,3"/>
                <Setter Property="Template" Value="{DynamicResource {ComponentResourceKey ResourceId=TopLevelHeaderTemplateKey, TypeInTargetAssembly={x:Type MenuItem}}}"/>
            </Trigger>
            <Trigger Property="Role" Value="TopLevelItem">
                <Setter Property="Padding" Value="7,2,8,3"/>
                <Setter Property="Template" Value="{DynamicResource {ComponentResourceKey ResourceId=TopLevelItemTemplateKey, TypeInTargetAssembly={x:Type MenuItem}}}"/>
            </Trigger>
            <Trigger Property="Role" Value="SubmenuHeader">
                <Setter Property="Padding" Value="2,3,2,3"/>
                <Setter Property="Template" Value="{DynamicResource {ComponentResourceKey ResourceId=SubmenuHeaderTemplateKey, TypeInTargetAssembly={x:Type MenuItem}}}"/>
            </Trigger>
            <Trigger Property="Role" Value="SubmenuItem">
                <Setter Property="Padding" Value="2,3,2,3"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- EndRegion -->

    <!-- Region ======================= Droppy Custom Control Styles ============ -->
    <Style TargetType="{x:Type local:ResizeBarControl}">
        <Setter Property="MinWidth" Value="24"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ResizeBarControl}">
                    <ControlTemplate.Resources>
                        <LinearGradientBrush x:Key="ThumbBrush" StartPoint="0,1" EndPoint="0,0">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Color="#FF5287FF" Offset="0"/>
                                <GradientStop Color="#FFB3DCFF" Offset="1"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                        
                        <DrawingBrush x:Key="LeftThumbBrush">
                            <DrawingBrush.Drawing>
                                <DrawingGroup>
                                    <GeometryDrawing Brush="{StaticResource ThumbBrush}"
                                                     Geometry="M0,0 h3 v3 h-3 Z M5,0 h6 v3 h-6 Z"/>
                                    <GeometryDrawing Brush="{StaticResource ThumbBrush}"
                                                     Geometry="M0,5 h3 v3 h-3 Z M5,5 h3 v3 h-3 Z M10,5 h1 v3 h-1 Z"/>
                                </DrawingGroup>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>

                        <DrawingBrush x:Key="CenterThumbBrush">
                            <DrawingBrush.Drawing>
                                <DrawingGroup>
                                    <GeometryDrawing Brush="{StaticResource ThumbBrush}"
                                                     Geometry="M0,0 h3 v3 h-3 Z"/>
                                    <GeometryDrawing Brush="{StaticResource ThumbBrush}"
                                                     Geometry="M0,5 h3 v3 h-3 Z"/>
                                </DrawingGroup>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>

                        <DrawingBrush x:Key="RightThumbBrush">
                            <DrawingBrush.Drawing>
                                <DrawingGroup>
                                    <GeometryDrawing Brush="{StaticResource ThumbBrush}"
                                                     Geometry="M0,0 h6 v3 h-6 Z M8,0 h3 v3 h-3 Z"/>
                                    <GeometryDrawing Brush="{StaticResource ThumbBrush}"
                                                     Geometry="M0,5 h1 v3 h-1 Z M3,5 h3 v3 h-3 Z M8,5 h3 v3 h-3 Z"/>
                                </DrawingGroup>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                        
                        <Style x:Key="LeftThumbStyle" TargetType="Thumb">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Thumb">
                                        <Border Padding="4,0,0,4" Background="Transparent">
                                            <Border Height="8" Width="11" Background="{StaticResource LeftThumbBrush}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <Style x:Key="CenterThumbStyle" TargetType="Thumb">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Thumb">
                                        <Border Padding="0,0,0,4" Background="Transparent">
                                            <Border Height="8" Background="{StaticResource CenterThumbBrush}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <Style x:Key="RightThumbStyle" TargetType="Thumb">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Thumb">
                                        <Border Padding="0,0,4,4" Background="Transparent">
                                            <Border Height="8" Width="11" Background="{StaticResource RightThumbBrush}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                    </ControlTemplate.Resources>
                    
                    <DockPanel>
                        <Thumb Name="PART_LeftThumb" DockPanel.Dock="Left" Style="{StaticResource LeftThumbStyle}" Cursor="SizeNESW"/>
                        <Thumb Name="PART_RightThumb" DockPanel.Dock="Right" Style="{StaticResource RightThumbStyle}" Cursor="SizeNWSE"/>
                        <Thumb Name="PART_CenterThumb" Style="{StaticResource CenterThumbStyle}" Cursor="SizeNS"/>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="{x:Type local:WidgetSiteControl}">
        <Setter Property="Width" Value="160"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="6,2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:WidgetSiteControl}">
                    <ControlTemplate.Resources>
                        <DataTemplate DataType="{x:Type data:FolderWidgetData}">
                            <local:FolderWidgetControl/>
                        </DataTemplate>
                        
                        <DataTemplate DataType="{x:Type local:EmptySiteClass}">
                            <local:EmptyWidgetControl/>
                        </DataTemplate>
                    </ControlTemplate.Resources>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter Content="{Binding Path=Content,
                                                            RelativeSource={RelativeSource Mode=TemplatedParent},
                                                            Converter={StaticResource widgetSiteContentConverter}}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:EmptyWidgetControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:EmptyWidgetControl}">
                    <Button Style="{StaticResource AddWidgetButton}" Padding="8">
                        <DockPanel>
                            <Rectangle Width="16" Height="16" Fill="{StaticResource AddIcon1}" Margin="4,0,0,0"/>
                            <TextBlock Foreground="#FFD4D4D4" FontSize="12" Text="Add Item..." VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8,0,0,0"/>
                        </DockPanel>
                    </Button>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:FolderWidgetControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FolderWidgetControl}">
                    <Button Name="FolderBtn" Style="{StaticResource StandardWidgetButton}" Padding="6" 
                            ToolTip="{Binding Path=Path}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Image Grid.Column="0" Width="24" Source="{DynamicResource FolderIcon1}" />
                            <local:FilePathTextBlock x:Name="FilePathTB" Grid.Column="1"
                                                     Margin="4,0,0,0" Foreground="white"
                                                     FilePath="{Binding Path=Label}" VerticalAlignment="Center"/>

                            <local:InPlaceEditBoxPopup x:Name="InPlaceEditBox" PlacementTarget="{Binding ElementName=FilePathTB}"
                                                       IsOpen="{Binding IsLabelEditPopupOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                       Background="{StaticResource InPlaceEditFillBrush}" BorderThickness="1"
                                                       BorderBrush="{StaticResource InPlaceEditBorderBrush}" CornerRadius="4" Foreground="White"
                                                       Text="{Binding Path=Label}" />
                        </Grid>
                        
                        <Button.ContextMenu>
                            <ContextMenu >
                                <MenuItem Name="PART_ChangeLabel" Header="Change Label"/>
                                <MenuItem Name="PART_Paste" Header="Paste" IsEnabled="{TemplateBinding IsPasteEnabled}" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                    
                    <ControlTemplate.Triggers>
                        <Trigger SourceName="FilePathTB" Property="IsTextClipped" Value="False">
                            <Setter TargetName="FolderBtn" Property="ToolTipService.IsEnabled" Value="False"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="{x:Type local:InPlaceEditBoxPopup}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:InPlaceEditBoxPopup}">
                    <Popup Name="PART_Popup" AllowsTransparency="True" PlacementTarget="{TemplateBinding PlacementTarget}" Placement="Center"
                           IsOpen="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsOpen, Mode=TwoWay}"
                           StaysOpen="False" PopupAnimation="Slide">
                        <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}"
                                Width="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=PlacementTarget.ActualWidth}"
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="{TemplateBinding CornerRadius}" Padding="2" >
                            <TextBox Name="PART_TextBox" Background="#00000000" Foreground="{TemplateBinding Foreground}" BorderThickness="0"
                                     Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Text, Mode=TwoWay}"/>
                        </Border>
                    </Popup>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- EndRegion -->
    
</ResourceDictionary>
