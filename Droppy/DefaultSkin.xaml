                                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                <GradientStop Color="#70B2B2B2" Offset="0"/>
                                                <GradientStop Color="#003F4462" Offset="0.43"/>
                                                <GradientStop Color="#003E4462" Offset="0.57"/>
                                                <GradientStop Color="#4A1F1F1F" Offset="1"/>
