                                <Image Width="40" Source="{StaticResource AddIcon1}" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Foreground="#FFD4D4D4" FontSize="14" Text="Add Item..." VerticalAlignment="Center"
