    <!-- ================ FolderWidgetControl Definition ======================-->
    <Style TargetType="{x:Type local:FolderWidgetControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FolderWidgetControl}">
                    <Button Style="{StaticResource StandardWidgetButton}" Padding="6">
                        <DockPanel>
                            <Image Width="24" Source="{DynamicResource FolderIcon1}" DockPanel.Dock="Left"/>
                            <local:FilePathTextBlock Margin="4,0,0,0" Foreground="white" FilePath="{Binding Path=Label}" VerticalAlignment="Center"/>
                        </DockPanel>
                    </Button>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
